<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.udacity.myapplication.MainActivity">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/udacity1" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/image1"
        android:scaleType="centerCrop"
        android:src="@drawable/udacity2" />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image1"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:fontFamily="sans-serif"
        android:text="Udacity"
        android:textColor="#02b3e4"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="15sp"
        android:fontFamily="sans-serif"
        android:text="2465 Latham St"
        android:textColor="#02b3e4"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/address2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address1"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="5sp"
        android:fontFamily="sans-serif"
        android:text="Mountain View, CA 94043"
        android:textColor="#02b3e4"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address2"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="5sp"
        android:fontFamily="sans-serif"
        android:text="650-555-5555"
        android:textColor="#02b3e4"
        android:textSize="23sp" />

</RelativeLayout>
